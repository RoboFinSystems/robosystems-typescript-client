{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "sdk/**/*.ts",
    "sdk-extensions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "sdk-extensions/hooks.ts"
  ]
}
