{
  "name": "@robosystems/client",
  "version": "0.1.7",
  "description": "TypeScript client library for RoboSystems Financial Knowledge Graph API",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "*.js",
    "*.ts",
    "*.d.ts",
    "client/**/*",
    "core/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "generate": "npm run generate:clean && npm run generate:sdk && npm run generate:fix && npm run format",
    "generate:clean": "rm -rf sdk",
    "generate:sdk": "npx @hey-api/openapi-ts -f openapi-ts.config.js",
    "generate:fix": "node scripts/fix-sdk-types.js",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "node prepare.js",
    "validate": "npm run validate:types",
    "validate:types": "tsc --noEmit --skipLibCheck --esModuleInterop --strict --target ES2022 --module commonjs src/*.ts *.gen.ts",
    "prepublishOnly": "npm run prepare",
    "build": "tsc",
    "test": "npm run validate"
  },
  "keywords": [
    "robosystems",
    "financial",
    "graph",
    "api",
    "sdk",
    "typescript",
    "knowledge-graph"
  ],
  "author": "RoboSystems Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarbingerFinLab/robosystems-typescript-client.git"
  },
  "bugs": {
    "url": "https://github.com/HarbingerFinLab/robosystems-typescript-client/issues"
  },
  "homepage": "https://github.com/HarbingerFinLab/robosystems-typescript-client#readme",
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.80.2",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
