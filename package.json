{
  "name": "@robosystems/client",
  "version": "0.2.1",
  "description": "TypeScript client library for RoboSystems Financial Knowledge Graph API",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "create-feature": "./bin/create-feature"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./index.js",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./extensions": {
      "types": "./extensions/index.d.ts",
      "require": "./extensions/index.js",
      "import": "./extensions/index.js",
      "default": "./extensions/index.js"
    },
    "./client": {
      "types": "./client.gen.d.ts",
      "require": "./client.gen.js",
      "import": "./client.gen.js",
      "default": "./client.gen.js"
    },
    "./types": {
      "types": "./types.gen.d.ts",
      "require": "./types.gen.js",
      "import": "./types.gen.js",
      "default": "./types.gen.js"
    },
    "./sdk": {
      "types": "./sdk.gen.d.ts",
      "require": "./sdk.gen.js",
      "import": "./sdk.gen.js",
      "default": "./sdk.gen.js"
    }
  },
  "files": [
    "index.js",
    "index.ts",
    "index.d.ts",
    "client.gen.js",
    "client.gen.ts",
    "client.gen.d.ts",
    "sdk.gen.js",
    "sdk.gen.ts",
    "sdk.gen.d.ts",
    "types.gen.js",
    "types.gen.ts",
    "types.gen.d.ts",
    "client/**/*",
    "core/**/*",
    "extensions/**/*",
    "sdk/**/*",
    "sdk-extensions/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "generate": "npm run generate:clean && npm run generate:sdk && npm run generate:fix && npm run prepare:publish && npm run format && npm run lint:fix",
    "generate:clean": "rm -rf sdk",
    "generate:sdk": "npx @hey-api/openapi-ts -f openapi-ts.config.js",
    "generate:fix": "node scripts/fix-sdk-types.js",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run format:check && npm run lint && npm run typecheck",
    "feature:create": "./bin/create-feature",
    "release:create": "./bin/create-release",
    "pr:create": "./bin/create-pr",
    "validate:fix": "npm run format && npm run lint:fix && npm run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run validate && npm run test && npm run build",
    "prepare:publish": "node prepare.js",
    "prepublishOnly": "npm run prepare:publish",
    "build": "tsc"
  },
  "keywords": [
    "robosystems",
    "financial",
    "graph",
    "api",
    "sdk",
    "typescript",
    "knowledge-graph"
  ],
  "author": "RFS LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RoboFinSystems/robosystems-typescript-client.git"
  },
  "bugs": {
    "url": "https://github.com/RoboFinSystems/robosystems-typescript-client/issues"
  },
  "homepage": "https://github.com/RoboFinSystems/robosystems-typescript-client#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.80.2",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^4.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "happy-dom": "^20.0.8",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^4.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "5.5.4",
    "vitest": "^4.0.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
